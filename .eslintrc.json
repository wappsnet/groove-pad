{
  "parser": "@typescript-eslint/parser",
  "env": {
    "browser": true,
    "node": true,
    "es2021": true,
    "commonjs": true,
    "jest": true
  },
  "parserOptions": {
    "cacheable": true,
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "react",
    "react-hooks",
    "@typescript-eslint",
    "prettier"
  ],
  "settings": {
    "react": {
      "version": "detect"
    },
    "import/resolver": {
      "typescript": {
      }
    }
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:import/recommended",
    "plugin:import/typescript"
  ],
  "rules": {
        "max-depth": ["error", 4],
        "complexity": ["error", 15],
    "react/no-array-index-key": [
      "error"
    ],
    "import/no-unresolved": [
      "error"
    ],
    "no-debugger": "error",
    "arrow-body-style": [
      "error",
      "as-needed"
    ],
    "@typescript-eslint/no-unused-vars": [
      "error"
    ],
    "@typescript-eslint/no-explicit-any": "off",
    "@typescript-eslint/no-non-null-assertion": "error",
    "react-hooks/rules-of-hooks": "error",
    "react/react-in-jsx-scope": "off",
    "react/no-unescaped-entities": [
      "error"
    ],
    "import/no-named-as-default": "off",
    "import/no-duplicates": [
      "error"
    ],
    "import/order": [
      "error",
      {
        "groups": [
          "object",
          "external",
          "internal",
          "parent",
          "sibling",
          "index",
          "unknown"
        ],
        "pathGroups": [
          {
            "pattern": "{.,..}/styles.ts",
            "group": "object",
            "position": "before"
          },
          {
            "pattern": "react",
            "group": "external",
            "position": "before"
          },
          {
            "pattern": "store/**",
            "group": "internal",
            "position": "after"
          },
          {
            "pattern": "assets/**",
            "group": "internal",
            "position": "after"
          },
          {
            "pattern": "definitions/**",
            "group": "internal",
            "position": "after"
          },
          {
            "pattern": "providers/**",
            "group": "internal",
            "position": "after"
          },
          {
            "pattern": "helpers/**",
            "group": "internal",
            "position": "after"
          },
          {
            "pattern": "hooks/**",
            "group": "internal",
            "position": "after"
          },
          {
            "pattern": "modules/**",
            "group": "internal",
            "position": "after"
          },
          {
            "pattern": "containers/**",
            "group": "internal",
            "position": "after"
          },
          {
            "pattern": "components/**",
            "group": "internal",
            "position": "after"
          },
          {
            "pattern": "providers/**",
            "group": "internal",
            "position": "after"
          },
          {
            "pattern": "screens/**",
            "group": "internal",
            "position": "after"
          }
        ],
        "pathGroupsExcludedImportTypes": [
          "react"
        ],
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        },
        "warnOnUnassignedImports": true,
        "newlines-between": "always"
      }
    ]
  },
  "overrides": [
    {
      "files": ["*.js"],
      "rules": {
        "@typescript-eslint/no-var-requires": "off"
      }
    },
    {
      "files": [
        "*.tsx"
      ],
      "rules": {
        "react/prop-types": "off"
      }
    }
  ]
}
